" Plugins
filetype plugin on
filetype indent on

" UI
syntax on
set number
set cursorline
set showmatch

" Theme
try
  colorscheme onedark
catch
endtry

" Encoding
set encoding=utf8

" Update file when modfied
set autoread

" Whitespace
set expandtab
set smarttab
set ai
set si
set wrap
set tabstop=2
set shiftwidth=2
set softtabstop=2
set backspace=indent,eol,start

" Disable bells
set noerrorbells
set novisualbell

" Searching
set ignorecase
set smartcase
set hlsearch
